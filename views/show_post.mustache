            </div>
        </nav>
        <div id="principal">
                <section class="py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-item_menu-center">
                    <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" sty src={{link}}   alt="..." /></div>
                    <div class="col-md-6">
                        <h1 class="display-5 fw-bolder">{{post.title}}</h1>
                        <div class="fs-5 mb-5">
                            <p>{{post.description}}     <span style="color:lightgrey">{{post.category}}</span></p>
                        <p style="text-aling:left;">
                        <div class="d-flex justify-content-left small text-warning mb-2" id="stars">

                        <script>
                        function starPainter (number){
                             let contentToRender = document.getElementById('stars');
                            content='';
                            for (i=1; i<=number; i++) {
                                contentToRender.innerHTML +='<div class="bi-star-fill"></div>';
                            }
                        };
                        starPainter(parseInt({{post.valoration}}))
                        </script>
                        </div>
                        <!--
                        {{#valoration}}
                        <div class="bi-star-fill"></div>
                        {{/valoration}}
                        </div>
                        </p> 
                        
                        {{#post.ingredients}}
                        <p class="lead">{{.}} 
                        <button class="btn btn-outline-dark flex-shrink-0 me-3" type="button" onclick="borrarIngrediente(`+i+`,`+post+`)">
                                Borrar ingrediente
                        </button></p>
                        {{/post.ingredients}}
                        -->
                        <div id="Ingredients_content">
                        <script>
                        function pintarIngredientes(array){
                             let ingredientsToRender = document.getElementById('Ingredients_content');

                            for (let i = 0; i < array.length; i++) {
                                ingredientsToRender.innerHTML += ` <p class="lead">`+array[i] +`
                                <a class="btn btn-outline-dark flex-shrink-0 me-3" type="submit" href="post/{{post.id}}/deleteIngredient/${i}">
                                    Borrar ingrediente
                                </a></p>`;
                            }
                            //return Ingredients_rendered;

                        }

                        ingredientsToPaint=[];
                        {{#post.ingredients}}
                        ingredientsToPaint.push('{{.}}');
                        {{/post.ingredients}}
                        pintarIngredientes(ingredientsToPaint);    
                        </script>


                        </div>
                        <form action="/post/{{post.id}}/addIngredient" role="form">
                        <input type="text" name="newIngredient" class="form-control" size="25" id="new_ingredient" placeholder="Ingresa el tipo de producto a añadir"><br>
                        <input type="submit" class="btn btn-outline-dark mt-auto" value="Añadir ingrediente">
                        </form>
                        </div>
                         <div class="d-flex">
                            <a class="btn btn-outline-dark flex-shrink-0 me-3" href ="/post/{{post.id}}/modification" type="button">
                                Modificar
                            </a>
                            <a class="btn btn-outline-dark flex-shrink-0 me-3" type="button" href="/post/{{post.id}}/deletePost">
                                Borrar
                            </a>
                            <a class="btn btn-outline-dark flex-shrink-0 me-3" type="button" href="/">
                                Volver
                            </a>                            
                        </div>
                    </div>
                </div>
            </div>
        </section> 
    
  
